@model EditBookModel
@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Edit Book";
}
<h1 class="text-light">@ViewData["Title"]</h1>

<form asp-controller="Books" asp-action="EditBook" method="post">
    <div class="border border-secondary text-light p-3 mt-4">
        <div class="mb-3">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control text-light bg-secondary border-secondary" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Author"></label>
            <input asp-for="Author" class="form-control text-light bg-secondary border-secondary" />
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>
        <div class="mb-3 d-none">
            <label asp-for="BookID"></label>
            <input asp-for="BookID" class="form-control text-light bg-secondary border-secondary" />
            <span asp-validation-for="BookID" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success" style="width:150px">Submit</button>
        <a asp-controller="Books" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Cancel
        </a>
    </div>
</form>
