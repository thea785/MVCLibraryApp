@model EditUserModel
@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Edit User";
}
<h1 class="text-light">@ViewData["Title"]</h1>

<form asp-controller="Dashboard" asp-action="EditUser" method="post">
    <div class="border border-secondary text-light p-3 mt-4">
        <div class="mb-3">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control text-light bg-secondary border-secondary" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control text-light bg-secondary border-secondary" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control text-light bg-secondary border-secondary" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        @if (Context.Session.GetInt32("RoleID") > 3) 
        {
            <div class="mb-3">
                <label asp-for="RoleID"></label><br />
                <select asp-for="RoleID">
                    <option value=2>Patron</option>
                    <option value=3>Librarian</option>
                    <option value=4>Admin</option>
                </select>
            </div>
        }
        <div class="mb-3">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control text-light bg-secondary border-secondary" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success" style="width:150px">Submit</button>
        <a asp-controller="Dashboard" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Cancel
        </a>
    </div>
</form>
